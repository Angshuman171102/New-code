<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    #noButton {
      position: relative;
      animation: moveAround 2s infinite;
    }

    @keyframes moveAround {
      0% { left: 0; top: 0; }
      25% { left: 0; top: 50px; }
      50% { left: 50px; top: 50px; }
      75% { left: 50px; top: 0; }
      100% { left: 0; top: 0; }
    }

    #result {
      margin-top: 60px;
    }
  </style>
  <script>
    function askForDate() {
      var resultElement = document.getElementById("result");
      var yesButton = document.getElementById("yesButton");
      var noButton = document.getElementById("noButton");

      if (event.target === yesButton) {
        resultElement.textContent = "Obviously! How could you say no to me?";
      } else if (event.target === noButton) {
        noButton.classList.add("moveAround");
        resultElement.textContent = "No was never an option.";
      }
    }
  </script>
</head>
<body>
  <h1>Yashwi, do you wanna go on a date?</h1>
  <button id="yesButton" onclick="askForDate()">Yes</button>
  <button id="noButton" onclick="askForDate()">No</button>
  <div id="result"></div>
</body>
</html>
